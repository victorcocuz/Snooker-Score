<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/frag_play_ball_first_player"
            android:layout_width="@dimen/margin_large"
            android:layout_height="@dimen/margin_large"
            android:layout_marginEnd="@dimen/margin_small"
            android:onClick="@{() -> viewModel.setBreaksFirst(0)}"
            app:layout_constraintBottom_toBottomOf="@+id/frag_play_btn_player_A"
            app:layout_constraintEnd_toStartOf="@+id/frag_play_btn_player_A"
            app:layout_constraintTop_toTopOf="@+id/frag_play_btn_player_A" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/frag_play_ball_first_player"
            android:layout_width="@dimen/margin_large"
            android:layout_height="@dimen/margin_large"
            android:layout_marginStart="@dimen/margin_small"
            android:onClick="@{() -> viewModel.setBreaksFirst(1)}"
            app:layout_constraintBottom_toBottomOf="@+id/frag_play_btn_player_A"
            app:layout_constraintStart_toEndOf="@+id/frag_play_btn_player_B"
            app:layout_constraintTop_toTopOf="@+id/frag_play_btn_player_A" />
    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start"
        app:duration="300">
        <OnClick
            app:clickAction="toggle"
            app:targetId="@id/frag_play_ball_first_player" />
    </Transition>
</MotionScene>
