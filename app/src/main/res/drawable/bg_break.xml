<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:padding="@dimen/padding_shape"
            android:shape="rectangle">

            <solid android:color="?attr/colorPrimaryVariant" />
            <corners
                android:bottomLeftRadius="@dimen/corner_radius"
                android:bottomRightRadius="@dimen/corner_radius"
                android:topLeftRadius="@dimen/corner_radius"
                android:topRightRadius="@dimen/corner_radius" />
            <stroke
                android:width="@dimen/stroke_single"
                android:color="@color/beige" />
        </shape>
    </item>
</layer-list>