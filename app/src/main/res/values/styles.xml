<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MontserratTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BlackText" parent="MontserratTextViewStyle">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextHeader" parent="MontserratTextViewStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="edit_text" parent="MontserratTextViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/temp_btn_height</item>
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:paddingLeft">@dimen/padding_medium</item>
        <item name="android:textColorHint">@color/accent</item>
        <item name="android:inputType">textCapWords</item>
    </style>

    <style name="MontserratButtonStyle" parent="BlackText">
        <item name="android:layout_width">@dimen/temp_btn_width</item>
        <item name="android:layout_height">@dimen/temp_btn_height</item>
        <item name="android:background">@drawable/temp_custom_ripple</item>
        <item name="android:paddingStart">@dimen/padding_button</item>
        <item name="android:paddingEnd">@dimen/padding_button</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:elevation">2dp</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:layout_marginStart">@dimen/margin_small</item>
        <item name="android:layout_marginEnd">@dimen/margin_small</item>
    </style>
</resources>
