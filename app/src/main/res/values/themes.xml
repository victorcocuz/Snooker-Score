<resources>
    <!-- Base application theme. -->
    <style name="Theme.SnookerBoard" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brown</item>
        <item name="colorPrimaryVariant">@color/brown_dark</item>
        <item name="colorOnPrimary">@color/beige</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">@color/green_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/background</item>
        <item name="android:buttonStyle">@style/ButtonNarrow</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/beige</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_temp_splash_screen_inset</item>
        <item name="postSplashScreenTheme">@style/Theme.SnookerBoard</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:colorBackground">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>