<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:startDestination="@id/playFragment">

    <!-- Main Fragments -->
    <fragment
        android:id="@+id/rankingsFragment"
        android:name="com.example.snookerscore.fragments.rankings.RankingsFragment"
        android:label="RankingsFragment" />
    <fragment
        android:id="@+id/friendsFragment"
        android:name="com.example.snookerscore.fragments.main.FriendsFragment"
        android:label="FriendsFragment" />
    <fragment
        android:id="@+id/playFragment"
        android:name="com.example.snookerscore.fragments.play.PlayFragment"
        android:label="PlayFragment" >
        <action
            android:id="@+id/action_playFragment_to_gameFragment"
            app:destination="@id/gameFragment"
            app:popUpTo="@id/playFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_playFragment_to_gameGenericDialogFragment"
            app:destination="@id/gameGenericDialogFragment" />
    </fragment>
    <fragment
        android:id="@+id/historyFragment"
        android:name="com.example.snookerscore.fragments.main.HistoryFragment"
        android:label="HistoryFragment" />
    <fragment
        android:id="@+id/statisticsFragment"
        android:name="com.example.snookerscore.fragments.main.StatisticsFragment"
        android:label="StatisticsFragment" />

    <!-- Authentication Fragments -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.snookerscore.fragments.authentication.LoginFragment"
        android:label="LoginFragment" />

    <!-- Game Fragments -->
    <fragment
        android:id="@+id/gameFragment"
        android:name="com.example.snookerscore.fragments.game.GameFragment"
        android:label="GameFragment" >
        <action
            android:id="@+id/action_gameFragment_to_gameGenericDialogFragment"
            app:destination="@id/gameGenericDialogFragment" />
        <action
            android:id="@+id/action_gameFragment_to_gameFoulDialogFragment"
            app:destination="@id/gameFoulDialogFragment" />
        <action
            android:id="@+id/action_gameFragment_to_gameStatsFragment"
            app:destination="@id/gameStatsFragment"
            app:popUpTo="@id/gameFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_gameFragment_to_playFragment"
            app:destination="@id/playFragment"
            app:popUpTo="@id/gameFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/gameStatsFragment"
        android:name="com.example.snookerscore.fragments.gamestatistics.GameStatsFragment"
        android:label="GameStatsFragment" >
        <action
            android:id="@+id/action_gameStatsFragment_to_playFragment"
            app:destination="@id/playFragment"
            app:popUpTo="@id/gameStatsFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <dialog
        android:id="@+id/gameGenericDialogFragment"
        android:name="com.example.snookerscore.fragments.gamedialogs.GameGenericDialogFragment"
        android:label="GameGenericDialogFragment" >
        <argument
            android:name="matchActionYes"
            app:argType="com.example.snookerscore.domain.MatchAction" />
        <argument
            android:name="matchActionNo"
            app:argType="com.example.snookerscore.domain.MatchAction" />
    </dialog>
    <dialog
        android:id="@+id/gameFoulDialogFragment"
        android:name="com.example.snookerscore.fragments.gamedialogs.GameFoulDialogFragment"
        android:label="GameFoulDialogFragment" />
</navigation>