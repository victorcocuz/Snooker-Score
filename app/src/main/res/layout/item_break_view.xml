<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="crtBreak"
            type="com.example.snookerscore.domain.DomainBreak" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black" />

        <LinearLayout
            android:id="@+id/item_break_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_xsmall"
            android:background="@color/design_default_color_secondary"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/item_break_a_balls_rv"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="match_parent"
                    app:bindPotsA="@{crtBreak}" />

                <TextView
                    android:id="@+id/item_break_a_fouls"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:text="Foul"
                    android:visibility="visible" />

            </FrameLayout>

            <TextView
                android:id="@+id/item_break_a_points"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/text_regular"
                app:crtBreakPointsA="@{crtBreak}"
                tools:text="12" />

            <TextView
                android:id="@+id/item_break_b_points"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/text_regular"
                app:crtBreakPointsB="@{crtBreak}"
                tools:text="9" />

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4">

                <TextView
                    android:id="@+id/item_break_b_fouls"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Foul"
                    android:visibility="invisible" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/item_break_b_balls_rv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    app:bindPotsB="@{crtBreak}" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</layout>