<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="gameViewModel"
            type="com.example.snookerscore.fragments.game.GameViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.game.GameFragment">

        <TextView
            android:id="@+id/game_label_player_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_xlarge"
            android:layout_marginTop="@dimen/margin_large"
            android:text="@string/fragment_game_label_player_a"
            app:crtPlayerA="@{gameViewModel.displayScore}"
            app:layout_constraintEnd_toStartOf="@+id/game_label_player_b"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/game_label_player_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_xlarge"
            android:text="@string/fragment_game_label_player_b"
            app:crtPlayerB="@{gameViewModel.displayScore}"
            app:layout_constraintBottom_toBottomOf="@+id/game_label_player_a"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/game_label_player_a" />

        <TextView
            android:id="@+id/game_text_score_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{String.valueOf(gameViewModel.displayScore.getFirst().framePoints)}"
            app:layout_constraintBottom_toBottomOf="@+id/game_text_score_total"
            app:layout_constraintEnd_toStartOf="@+id/game_text_score_frames_a"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="123" />

        <TextView
            android:id="@+id/game_text_score_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{String.valueOf(gameViewModel.displayScore.getSecond().framePoints)}"
            app:layout_constraintBottom_toBottomOf="@+id/game_text_score_total"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/game_text_score_frames_b"
            tools:text="147" />

        <TextView
            android:id="@+id/game_text_score_frames_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{String.valueOf(gameViewModel.displayScore.getFirst().matchPoints)}"
            app:layout_constraintBottom_toBottomOf="@+id/game_text_score_total"
            app:layout_constraintEnd_toStartOf="@+id/game_text_score_total"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/game_text_score_a"
            tools:text="13" />

        <TextView
            android:id="@+id/game_text_score_frames_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{String.valueOf(gameViewModel.displayScore.getSecond().matchPoints)}"
            app:layout_constraintBottom_toBottomOf="@+id/game_text_score_total"
            app:layout_constraintEnd_toStartOf="@+id/game_text_score_b"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/game_text_score_total"
            tools:text="15" />

        <TextView
            android:id="@+id/game_text_score_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            app:layout_constraintEnd_toStartOf="@+id/game_text_score_frames_b"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/game_text_score_frames_a"
            app:layout_constraintTop_toBottomOf="@+id/game_label_player_a"
            app:setTotalScore="@{gameViewModel.matchFrames}"
            tools:text="(37)" />

        <TextView
            android:id="@+id/game_text_score_percentage_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/game_text_score_foul_a"
            app:layout_constraintEnd_toStartOf="@+id/game_text_score_break_a"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/game_text_score_foul_a"
            app:shotMiss="@{gameViewModel.displayScore.getFirst().missedShots}"
            app:shotSuccess="@{gameViewModel.displayScore.getFirst().successShots}"
            tools:text="55%" />

        <TextView
            android:id="@+id/game_text_score_percentage_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/game_text_score_foul_a"
            app:layout_constraintEnd_toStartOf="@+id/game_text_score_foul_b"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/game_text_score_break_b"
            app:shotMiss="@{gameViewModel.displayScore.getSecond().missedShots}"
            app:shotSuccess="@{gameViewModel.displayScore.getSecond().successShots}"
            tools:text="58%" />

        <TextView
            android:id="@+id/game_text_score_foul_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:text="@{String.valueOf(gameViewModel.displayScore.getFirst().fouls)}"
            app:layout_constraintEnd_toStartOf="@+id/game_text_score_percentage_a"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/game_text_score_a"
            tools:text="1" />

        <TextView
            android:id="@+id/game_text_score_foul_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{String.valueOf(gameViewModel.displayScore.getSecond().fouls)}"
            app:layout_constraintBottom_toBottomOf="@+id/game_text_score_foul_a"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/game_text_score_percentage_b"
            tools:text="5" />

        <TextView
            android:id="@+id/game_text_score_break_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="50"
            android:text="@{String.valueOf(gameViewModel.displayScore.getFirst().highestBreak)}"
            app:layout_constraintBottom_toBottomOf="@+id/game_text_score_foul_a"
            app:layout_constraintEnd_toStartOf="@+id/game_text_score_break_b"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/game_text_score_percentage_a" />

        <TextView
            android:id="@+id/game_text_score_break_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{String.valueOf(gameViewModel.displayScore.getSecond().highestBreak)}"
            tools:text="40"
            app:layout_constraintBottom_toBottomOf="@+id/game_text_score_foul_a"
            app:layout_constraintEnd_toStartOf="@+id/game_text_score_percentage_b"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/game_text_score_break_a" />

        <TextView
            android:id="@+id/game_label_remaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_large"
            android:text="@string/fragment_game_label_remaining"
            app:layout_constraintBottom_toTopOf="@+id/game_label_diff"
            app:layout_constraintStart_toStartOf="@+id/game_label_diff" />

        <TextView
            android:id="@+id/game_label_diff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_large"
            android:layout_marginBottom="@dimen/margin_xlarge"
            android:text="@string/fragment_game_label_difference"
            app:layout_constraintBottom_toTopOf="@+id/frag_game_action_btns"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/game_text_score_remaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:gamePointsDiffSize="@{gameViewModel.displayBallStack.size()}"
            app:layout_constraintBottom_toBottomOf="@+id/game_label_remaining"
            app:layout_constraintStart_toStartOf="@+id/game_text_score_diff"
            tools:text="72" />

        <TextView
            android:id="@+id/game_text_score_diff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_large"
            app:gamePointsRemaining="@{gameViewModel.displayScore}"
            app:layout_constraintBottom_toBottomOf="@+id/game_label_diff"
            app:layout_constraintStart_toEndOf="@+id/game_label_diff"
            tools:text="54" />

        <include
            android:id="@+id/frag_game_action_btns"
            layout="@layout/layout_game_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_large"
            app:layout_constraintBottom_toTopOf="@+id/frag_game_balls_rv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/frag_game_balls_rv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/margin_large"
            android:layout_marginEnd="@dimen/margin_large"
            android:layout_marginBottom="@dimen/margin_large"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>