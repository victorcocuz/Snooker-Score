<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="gameViewModel"
            type="com.example.snookerscore.fragments.game.GameFragmentViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.game.GameFragment">

        <TextView
            android:id="@+id/game_label_player_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_large"
            app:crtPlayerA="@{gameViewModel.displayPlayer}"
            android:layout_marginTop="@dimen/margin_large"
            android:text="Player A"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/game_label_player_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:crtPlayerB="@{gameViewModel.displayPlayer}"
            android:layout_marginTop="@dimen/margin_large"
            android:text="Player B"
            app:layout_constraintStart_toStartOf="@+id/game_label_player_a"
            app:layout_constraintTop_toBottomOf="@+id/game_label_player_a" />

        <TextView
            android:id="@+id/game_text_score_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_xlarge"
            android:text="@{String.valueOf(gameViewModel.displayPlayer.getFirstPlayer().framePoints)}"
            app:layout_constraintBottom_toBottomOf="@+id/game_label_player_a"
            app:layout_constraintStart_toEndOf="@+id/game_label_player_a" />

        <TextView
            android:id="@+id/game_text_score_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{String.valueOf(gameViewModel.displayPlayer.getSecondPlayer().framePoints)}"
            app:layout_constraintBottom_toBottomOf="@+id/game_label_player_b"
            app:layout_constraintStart_toStartOf="@+id/game_text_score_a" />

        <TextView
            android:id="@+id/game_text_score_remaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{String.valueOf(gameViewModel.pointsRemaining)}"
            app:layout_constraintBottom_toBottomOf="@+id/game_label_remaining"
            app:layout_constraintStart_toStartOf="@+id/game_text_score_b" />

        <TextView
            android:id="@+id/game_text_score_diff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{String.valueOf(gameViewModel.pointsDiff)}"
            app:layout_constraintBottom_toBottomOf="@+id/game_label_diff"
            app:layout_constraintStart_toStartOf="@+id/game_text_score_remaining" />

        <TextView
            android:id="@+id/game_label_remaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:text="Remaining"
            app:layout_constraintStart_toStartOf="@+id/game_label_player_b"
            app:layout_constraintTop_toBottomOf="@+id/game_label_player_b" />

        <TextView
            android:id="@+id/game_label_diff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:text="Difference"
            app:layout_constraintStart_toStartOf="@+id/game_label_remaining"
            app:layout_constraintTop_toBottomOf="@+id/game_label_remaining" />

        <TextView
            android:id="@+id/game_text_score_frames_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_xlarge"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="@+id/game_text_score_a"
            app:layout_constraintStart_toEndOf="@+id/game_text_score_a" />

        <TextView
            android:id="@+id/game_text_score_frames_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="@+id/game_text_score_b"
            app:layout_constraintStart_toStartOf="@+id/game_text_score_frames_a" />

        <include
            android:id="@+id/frag_game_actions"
            layout="@layout/layout_game_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_large"
            app:layout_constraintBottom_toTopOf="@+id/frag_game_balls_rv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/frag_game_balls_rv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_large"
            app:layout_constraintBottom_toTopOf="@+id/frag_game_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/frag_game_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Go to Game Stats Fragment"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>