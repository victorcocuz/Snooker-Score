<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.quickpoint.snookerboard.domain.PotType" />
        <variable
            name="varGameVm"
            type="com.quickpoint.snookerboard.fragments.game.GameViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimaryVariant">

        <FrameLayout
            android:id="@+id/l_game_actions_fl_line_hor_two"
            style="@style/LineHorizontalAccent"
            android:layout_width="0dp"
            app:layout_constraintBottom_toTopOf="@id/l_game_actions_btn_foul"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/l_game_actions_btn_foul"
            style="@style/ButtonStretched"
            android:layout_width="0dp"
            android:onClick="@{() -> varGameVm.assignPot(PotType.TYPE_FOUL_ATTEMPT)}"
            android:text="@string/l_game_actions_btn_foul"
            app:layout_constraintBottom_toTopOf="@id/l_game_actions_fl_line_hor_one"
            app:layout_constraintEnd_toStartOf="@id/l_game_actions_fl_line_vert_one"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="0.2" />

        <FrameLayout
            android:id="@+id/l_game_actions_fl_line_vert_one"
            style="@style/LineVerticalAccent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/l_game_actions_btn_foul"
            app:layout_constraintEnd_toStartOf="@id/l_game_actions_btn_safe"
            app:layout_constraintStart_toEndOf="@id/l_game_actions_btn_foul"
            app:layout_constraintTop_toTopOf="@+id/l_game_actions_btn_foul" />

        <TextView
            android:id="@+id/l_game_actions_btn_safe"
            style="@style/ButtonStretched"
            android:layout_width="0dp"
            android:onClick="@{() -> varGameVm.assignPot(PotType.TYPE_SAFE)}"
            android:text="@string/l_game_actions_btn_safe"
            app:layout_constraintBottom_toBottomOf="@+id/l_game_actions_btn_foul"
            app:layout_constraintEnd_toStartOf="@id/l_game_actions_fl_line_vert_two"
            app:layout_constraintStart_toEndOf="@id/l_game_actions_fl_line_vert_one"
            app:layout_constraintTop_toTopOf="@+id/l_game_actions_btn_foul"
            app:layout_constraintWidth_percent="0.2" />

        <FrameLayout
            android:id="@+id/l_game_actions_fl_line_vert_two"
            style="@style/LineVerticalAccent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/l_game_actions_btn_foul"
            app:layout_constraintEnd_toStartOf="@id/l_game_actions_btn_safe_miss"
            app:layout_constraintStart_toEndOf="@id/l_game_actions_btn_safe"
            app:layout_constraintTop_toTopOf="@+id/l_game_actions_btn_foul" />

        <TextView
            android:id="@+id/l_game_actions_btn_safe_miss"
            style="@style/ButtonStretched"
            android:layout_width="0dp"
            android:onClick="@{() -> varGameVm.assignPot(PotType.TYPE_SAFE_MISS)}"
            android:text="@string/l_game_actions_btn_safe_miss"
            app:layout_constraintBottom_toBottomOf="@+id/l_game_actions_btn_foul"
            app:layout_constraintEnd_toStartOf="@id/l_game_actions_fl_line_vert_three"
            app:layout_constraintStart_toEndOf="@id/l_game_actions_fl_line_vert_two"
            app:layout_constraintTop_toTopOf="@+id/l_game_actions_btn_foul"/>

        <FrameLayout
            android:id="@+id/l_game_actions_fl_line_vert_three"
            style="@style/LineVerticalAccent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/l_game_actions_btn_foul"
            app:layout_constraintEnd_toStartOf="@id/l_game_actions_btn_snooker"
            app:layout_constraintStart_toEndOf="@id/l_game_actions_btn_safe_miss"
            app:layout_constraintTop_toTopOf="@+id/l_game_actions_btn_foul" />

        <TextView
            android:id="@+id/l_game_actions_btn_snooker"
            style="@style/ButtonStretched"
            android:layout_width="0dp"
            android:onClick="@{() -> varGameVm.assignPot(PotType.TYPE_SNOOKER)}"
            android:text="@string/l_game_actions_btn_snooker"
            app:layout_constraintBottom_toBottomOf="@+id/l_game_actions_btn_foul"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/l_game_actions_fl_line_vert_three"
            app:layout_constraintTop_toTopOf="@+id/l_game_actions_btn_foul" />

        <FrameLayout
            android:id="@+id/l_game_actions_fl_line_hor_one"
            style="@style/LineHorizontalAccent"
            android:layout_width="0dp"
            app:layout_constraintBottom_toTopOf="@id/l_game_actions_ll_balls"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/l_game_actions_btn_free_ball"
            style="@style/ButtonNarrow"
            android:layout_width="0dp"
            android:layout_marginStart="@dimen/margin_layout_offset"
            android:layout_marginEnd="@dimen/margin_layout_offset_mid"
            android:onClick="@{() -> varGameVm.assignPot(PotType.TYPE_FREE_TOGGLE)}"
            android:text="@string/l_game_actions_btn_free_ball"
            app:layout_constraintBottom_toBottomOf="@id/l_game_actions_ll_balls"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/l_game_actions_ll_balls"
            app:setFreeballVisible="@{varGameVm.freeballInfo.visible}"
            app:setSelected="@{varGameVm.freeballInfo.selected}" />

        <LinearLayout
            android:id="@+id/l_game_actions_ll_balls"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/btn_balls_height"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/l_game_actions_fl_line_vert_balls"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/l_game_actions_rv_balls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:bindMatchBallsRv="@{varGameVm.displayFrame.ballStack}" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/l_game_actions_fl_line_vert_balls"
            style="@style/LineVerticalAccent"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/padding_ball"
            app:layout_constraintBottom_toBottomOf="@id/l_game_actions_ll_balls"
            app:layout_constraintEnd_toStartOf="@id/l_game_actions_fl_ball_miss"
            app:layout_constraintTop_toTopOf="@+id/l_game_actions_ll_balls" />

        <FrameLayout
            android:id="@+id/l_game_actions_fl_ball_miss"
            android:layout_width="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/l_game_actions_ll_balls"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/l_game_actions_ll_balls"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/l_game_actions_btn_ball_miss"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_ball_miss"
                android:contentDescription="@string/l_game_actions_btn_ball_miss"
                android:onClick="@{() -> varGameVm.assignPot(PotType.TYPE_MISS)}" />
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>