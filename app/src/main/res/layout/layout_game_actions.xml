<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="gameViewModel"
            type="com.example.snookerscore.fragments.game.GameFragmentViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/game_btn_act_safe"
            style="@style/temp_btn"
            android:onClick="@{() -> gameViewModel.onSafeClicked()}"
            android:text="SAFE"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/game_btn_act_miss"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/game_btn_act_miss"
            style="@style/temp_btn"
            android:onClick="@{() -> gameViewModel.onMissClicked()}"
            android:text="MISS"
            app:layout_constraintBottom_toBottomOf="@+id/game_btn_act_safe"
            app:layout_constraintEnd_toStartOf="@+id/game_btn_act_foul"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/game_btn_act_safe" />

        <TextView
            android:id="@+id/game_btn_act_foul"
            style="@style/temp_btn"
            android:onClick="@{() -> gameViewModel.onFoulClicked()}"
            android:text="FOUL"
            app:layout_constraintBottom_toBottomOf="@+id/game_btn_act_safe"
            app:layout_constraintEnd_toStartOf="@+id/game_btn_act_add_red"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/game_btn_act_miss" />

        <TextView
            android:id="@+id/game_btn_act_add_red"
            style="@style/temp_btn"
            android:onClick="@{() -> gameViewModel.onAddRedClicked()}"
            android:text="++RED"
            app:layout_constraintBottom_toBottomOf="@+id/game_btn_act_safe"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/game_btn_act_foul"
            app:redEnabled="@{gameViewModel.ballStackSize}" />

        <TextView
            android:id="@+id/game_btn_act_rerack"
            style="@style/temp_btn"
            android:layout_marginBottom="32dp"
            android:onClick="@{() -> gameViewModel.onRerackClicked()}"
            android:text="RERACK"
            app:layout_constraintBottom_toTopOf="@+id/game_btn_act_safe"
            app:layout_constraintEnd_toStartOf="@+id/game_btn_act_end_frame"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/game_btn_act_end_frame"
            style="@style/temp_btn"
            android:onClick="@{() -> gameViewModel.onEndFrameClicked()}"
            android:text="END"
            app:layout_constraintBottom_toBottomOf="@+id/game_btn_act_rerack"
            app:layout_constraintEnd_toStartOf="@+id/game_btn_act_end_match"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/game_btn_act_rerack" />

        <TextView
            android:id="@+id/game_btn_act_end_match"
            style="@style/temp_btn"
            android:onClick="@{() -> gameViewModel.onEndMatchClicked()}"
            android:text="FINISH"
            app:layout_constraintBottom_toBottomOf="@+id/game_btn_act_rerack"
            app:layout_constraintEnd_toStartOf="@+id/game_btn_act_undo"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/game_btn_act_end_frame" />

        <TextView
            android:id="@+id/game_btn_act_undo"
            style="@style/temp_btn"
            android:onClick="@{() -> gameViewModel.onUndoClicked()}"
            android:text="UNDO"
            app:layout_constraintBottom_toBottomOf="@+id/game_btn_act_rerack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/game_btn_act_end_match"
            app:undoEnabled="@{gameViewModel.ballStackSize}" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>