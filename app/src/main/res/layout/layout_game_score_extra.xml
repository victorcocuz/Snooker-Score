            app:layout_constraintBottom_toBottomOf="@+id/l_game_score_tv_rest_shots_label"
            app:layout_constraintEnd_toEndOf="@+id/l_game_score_tv_percentage_a"
            app:layout_constraintStart_toStartOf="@+id/l_game_score_tv_percentage_a"
            app:layout_constraintTop_toTopOf="@+id/l_game_score_tv_rest_shots_label"
            tools:text="1" />
<!--                    app:setPercentageA="@{varGameVm.displayFrame.score[0].restShotsSuccess}"
            app:setPercentageB="@{varGameVm.displayFrame.score[0].restShotsMissed}"-->

        <TextView
            android:id="@+id/l_game_score_tv_rest_shots_label"
