            android:layout_marginTop="@dimen/margin_xxxsmall"
            android:text="@string/l_game_score_tv_safety_percentage_label"
            app:layout_constraintEnd_toStartOf="@+id/l_game_score_extra_gd_vert_mid"
            app:layout_constraintStart_toStartOf="@+id/l_game_score_extra_gd_vert_mid"
            app:layout_constraintTop_toBottomOf="@+id/l_game_score_tv_percentage_label" />

        <TextView
            android:id="@+id/game_score_tv_safety_percentage_b"
            style="@style/TextHeaderBold"
            app:layout_constraintBottom_toBottomOf="@+id/l_game_score_tv_safety_percentage_label"
            app:layout_constraintEnd_toEndOf="@+id/l_game_score_tv_break_b"
            app:layout_constraintStart_toStartOf="@+id/l_game_score_tv_break_b"
            app:layout_constraintTop_toTopOf="@+id/l_game_score_tv_safety_percentage_label"
            tools:text="58%" />
<!--                    app:setPercentageA="@{varGameVm.displayFrame.score[1].safetySuccessShots}"
            app:setPercentageB="@{varGameVm.displayFrame.score[1].safetyMissedShots}"-->

        <!-- Snooker shots -->
        <TextView
            android:id="@+id/l_game_score_tv_snookers_a"
            style="@style/TextHeaderBold"
            app:layout_constraintBottom_toBottomOf="@+id/l_game_score_tv_snookers_label"
            app:layout_constraintEnd_toEndOf="@+id/l_game_score_tv_percentage_a"
            app:layout_constraintStart_toStartOf="@+id/l_game_score_tv_percentage_a"
            app:layout_constraintTop_toTopOf="@+id/l_game_score_tv_snookers_label"
            tools:text="1" />
<!--                    android:text="@{String.valueOf(varGameVm.displayFrame.score[0].snookers)}"
-->

        <TextView
            android:id="@+id/l_game_score_tv_snookers_label"
