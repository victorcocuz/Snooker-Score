            android:id="@+id/l_game_score_tv_points_no_return_a"
            style="@style/TextHeaderBold"
            app:layout_constraintBottom_toBottomOf="@+id/l_game_score_tv_points_no_return_label"
            app:layout_constraintEnd_toEndOf="@+id/l_game_score_tv_percentage_a"
            app:layout_constraintStart_toStartOf="@+id/l_game_score_tv_percentage_a"
            app:layout_constraintTop_toTopOf="@+id/l_game_score_tv_points_no_return_label"
