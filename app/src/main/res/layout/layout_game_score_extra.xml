            android:layout_marginTop="@dimen/margin_xxxsmall"
            android:text="@string/l_game_score_tv_rest_shots_label"
            app:layout_constraintEnd_toStartOf="@+id/l_game_score_extra_gd_vert_mid"
            app:layout_constraintStart_toStartOf="@+id/l_game_score_extra_gd_vert_mid"
            app:layout_constraintTop_toBottomOf="@+id/l_game_score_tv_long_shots_label" />

        <TextView
            android:id="@+id/l_game_score_tv_rest_shots_b"
            style="@style/TextHeaderBold"
            app:layout_constraintBottom_toBottomOf="@+id/l_game_score_tv_rest_shots_label"
            app:layout_constraintEnd_toEndOf="@+id/l_game_score_tv_percentage_b"
            app:layout_constraintStart_toStartOf="@+id/l_game_score_tv_percentage_b"
            app:layout_constraintTop_toTopOf="@+id/l_game_score_tv_rest_shots_label"
            tools:text="5" />
<!--                    app:setPercentageA="@{varGameVm.displayFrame.score[1].restShotsSuccess}"
            app:setPercentageB="@{varGameVm.displayFrame.score[1].restShotsMissed}"-->

        <!-- Points with no return -->
