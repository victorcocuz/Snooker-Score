            tools:text="55%" />
<!--                  app:setPercentageA="@{varGameVm.displayFrame.score[0].safetySuccessShots}"
            app:setPercentageB="@{varGameVm.displayFrame.score[0].safetyMissedShots}"-->

        <TextView
