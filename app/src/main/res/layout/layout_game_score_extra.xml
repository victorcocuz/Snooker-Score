        <TextView
            android:id="@+id/l_game_score_tv_long_shots_b"
            style="@style/TextHeaderBold"
            app:layout_constraintBottom_toBottomOf="@+id/l_game_score_tv_long_shots_label"
            app:layout_constraintEnd_toEndOf="@+id/l_game_score_tv_percentage_b"
            app:layout_constraintStart_toStartOf="@+id/l_game_score_tv_percentage_b"
            app:layout_constraintTop_toTopOf="@+id/l_game_score_tv_long_shots_label"
            tools:text="5" />
<!--                    app:setPercentageA="@{varGameVm.displayFrame.score[1].longShotsSuccess}"
            app:setPercentageB="@{varGameVm.displayFrame.score[1].longShotsMissed}"-->

        <!-- Rest shots -->
        <TextView
            android:id="@+id/l_game_score_tv_rest_shots_a"
