<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
<variable
    name="frame"
    type="com.example.snookerscore.fragments.game.Frame" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_gamestats_player_a_frame_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="12"
            android:text="@{String.valueOf(frame.frameScore.framePoints)}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/item_gamestats_match_points"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_gamestats_match_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="(1-0)"
            android:text="@{String.valueOf(frame.frameScore.matchPoints)}"
            app:layout_constraintBottom_toBottomOf="@+id/item_gamestats_player_a_frame_points"
            app:layout_constraintEnd_toStartOf="@+id/item_gamestats_player_b_frame_points"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/item_gamestats_player_a_frame_points" />

        <TextView
            android:id="@+id/item_gamestats_player_b_frame_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="18"
            android:text="@{String.valueOf(frame.frameScore.framePoints)}"
            app:layout_constraintBottom_toBottomOf="@+id/item_gamestats_player_a_frame_points"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/item_gamestats_match_points" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>