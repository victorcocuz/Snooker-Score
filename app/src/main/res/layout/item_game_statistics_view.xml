<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="frameScoreA"
            type="com.example.snookerscore.fragments.game.FrameScore" />
        <variable
            name="frameScoreB"
            type="com.example.snookerscore.fragments.game.FrameScore" />
    </data>

    <LinearLayout
        android:id="@+id/item_gamestats_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_xsmall">

        <TextView
            android:id="@+id/item_gamestats_frame_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            app:gameStatsFrameNumber="@{frameScoreA.frameCount}"
            tools:text="1" />

        <TextView
            android:id="@+id/item_gamestats_player_a_break"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            app:gameStatsBreak="@{frameScoreA.highestBreak}"
            tools:text="120" />

        <TextView
            android:id="@+id/item_gamestats_player_a_percentage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            app:shotMiss="@{frameScoreA.missedShots}"
            app:shotSuccess="@{frameScoreA.successShots}"
            tools:text="50%" />

        <TextView
            android:id="@+id/item_gamestats_player_a_frame_points"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            app:gameStatsPoints="@{frameScoreA.framePoints}"

            tools:text="12" />

        <TextView
            android:id="@+id/item_gamestats_match_points"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            app:matchPointsPlayerA="@{frameScoreA.matchPoints}"
            app:matchPointsPlayerB="@{frameScoreB.matchPoints}"
            tools:text="(1-0)" />

        <TextView
            android:id="@+id/item_gamestats_player_b_frame_points"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            app:gameStatsPoints="@{frameScoreB.framePoints}"
            tools:text="18" />

        <TextView
            android:id="@+id/item_gamestats_player_b_percentage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            app:shotMiss="@{frameScoreB.missedShots}"
            app:shotSuccess="@{frameScoreB.successShots}"
            tools:text="48%" />

        <TextView
            android:id="@+id/item_gamestats_player_b_break"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            app:gameStatsBreak="@{frameScoreB.highestBreak}"
            tools:text="138" />

    </LinearLayout>
</layout>