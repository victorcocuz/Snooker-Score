<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.example.snookerscore.domain.MatchAction" />

        <variable
            name="varNameA"
            type="String" />

        <variable
            name="varNameB"
            type="String" />

        <variable
            name="playViewModel"
            type="com.example.snookerscore.fragments.play.PlayFragmentViewModel" />

        <variable
            name="eventsViewModel"
            type="com.example.snookerscore.GenericEventsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.play.PlayFragment">

        <TextView
            android:id="@+id/frag_play_label_players"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:text="@string/fragment_play_label_players"
            app:layout_constraintBottom_toTopOf="@+id/frag_play_label_frames"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread_inside" />

        <TextView
            android:id="@+id/frag_play_btn_player_A"
            style="@style/temp_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:onClick="@{() -> eventsViewModel.onEventMatchActionConfirmed(MatchAction.NAME_CHANGE_A_QUERIED)}"
            android:text="@{varNameA}"
            app:layout_constraintEnd_toStartOf="@+id/frag_play_label_vs"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frag_play_label_players" />

        <TextView
            android:id="@+id/frag_play_label_vs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_play_label_vs"
            app:layout_constraintBottom_toBottomOf="@+id/frag_play_btn_player_A"
            app:layout_constraintEnd_toStartOf="@+id/frag_play_btn_player_B"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/frag_play_btn_player_A" />

        <TextView
            android:id="@+id/frag_play_btn_player_B"
            style="@style/temp_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{() -> eventsViewModel.onEventMatchActionConfirmed(MatchAction.NAME_CHANGE_B_QUERIED)}"
            android:text="@{varNameB}"
            app:layout_constraintBottom_toBottomOf="@+id/frag_play_btn_player_A"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/frag_play_label_vs" />

        <TextView
            android:id="@+id/frag_play_label_frames"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_play_label_frames"
            app:layout_constraintBottom_toTopOf="@+id/frag_play_label_breaks_first"
            app:layout_constraintStart_toStartOf="@+id/frag_play_label_players"
            app:layout_constraintTop_toBottomOf="@+id/frag_play_label_players" />

        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/numberPicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frag_play_label_frames"
            app:np_orientation="horizontal"
            app:onValueChangedListener="@{(picker,oldv,newv) -> playViewModel.setFrames(newv)}"
            tools:orientation="horizontal" />

        <TextView
            android:id="@+id/frag_play_label_breaks_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_play_label_breaks_first"
            app:layout_constraintBottom_toTopOf="@+id/frag_play_label_reds"
            app:layout_constraintStart_toStartOf="@+id/frag_play_label_players"
            app:layout_constraintTop_toBottomOf="@+id/frag_play_label_frames" />

        <TextView
            android:id="@+id/frag_play_btn_break_player_a"
            style="@style/temp_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:onClick="@{() -> playViewModel.setBreaksFirst(0)}"
            android:text="@string/fragment_play_btn_break_player_a"
            app:layout_constraintEnd_toStartOf="@+id/frag_play_btn_break_random"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frag_play_label_breaks_first"
            app:setSelected="@{playViewModel.eventBreaksFirst == 0}" />

        <TextView
            android:id="@+id/frag_play_btn_break_random"
            style="@style/temp_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{() -> playViewModel.setBreaksFirst(2)}"
            android:text="@string/fragment_play_btn_break_random"
            app:layout_constraintBottom_toBottomOf="@+id/frag_play_btn_break_player_a"
            app:layout_constraintEnd_toStartOf="@+id/frag_play_btn_break_player_b"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/frag_play_btn_break_player_a" />

        <TextView
            android:id="@+id/frag_play_btn_break_player_b"
            style="@style/temp_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{() -> playViewModel.setBreaksFirst(1)}"
            android:text="@string/fragment_play_btn_break_player_b"
            app:layout_constraintBottom_toBottomOf="@+id/frag_play_btn_break_random"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/frag_play_btn_break_random"
            app:setSelected="@{playViewModel.eventBreaksFirst == 1}" />

        <TextView
            android:id="@+id/frag_play_label_reds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_play_label_reds"
            app:layout_constraintBottom_toTopOf="@+id/frag_play_label_foul_modifier"
            app:layout_constraintStart_toStartOf="@+id/frag_play_label_players"
            app:layout_constraintTop_toBottomOf="@+id/frag_play_label_breaks_first" />

        <TextView
            android:id="@+id/frag_play_btn_reds_six"
            style="@style/temp_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_large"
            android:onClick="@{() -> playViewModel.setReds(6)}"
            android:text="@string/fragment_play_btn_reds_six"
            app:layout_constraintEnd_toStartOf="@+id/frag_play_btn_reds_ten"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frag_play_label_reds"
            app:setSelected="@{playViewModel.reds == 6}" />

        <TextView
            android:id="@+id/frag_play_btn_reds_ten"
            style="@style/temp_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{() -> playViewModel.setReds(10)}"
            android:text="@string/fragment_play_btn_reds_ten"
            app:layout_constraintBottom_toBottomOf="@+id/frag_play_btn_reds_six"
            app:layout_constraintEnd_toStartOf="@+id/frag_play_btn_reds_fifteen"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/frag_play_btn_reds_six"
            app:setSelected="@{playViewModel.reds == 10}" />

        <TextView
            android:id="@+id/frag_play_btn_reds_fifteen"
            style="@style/temp_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_large"
            android:onClick="@{() -> playViewModel.setReds(15)}"
            android:text="@string/fragment_play_btn_reds_fifteen"
            app:layout_constraintBottom_toBottomOf="@+id/frag_play_btn_reds_six"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/frag_play_btn_reds_ten"
            app:setSelected="@{playViewModel.reds == 15}" />

        <TextView
            android:id="@+id/frag_play_label_foul_modifier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_play_label_foul_modifier"
            app:layout_constraintBottom_toTopOf="@+id/frag_play_btn_play"
            app:layout_constraintStart_toStartOf="@+id/frag_play_label_players"
            app:layout_constraintTop_toBottomOf="@+id/frag_play_label_reds" />

        <TextView
            android:id="@+id/frag_play_btn_foul_one"
            style="@style/temp_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:onClick="@{() -> playViewModel.setFoulModifier(-3)}"
            android:text="@string/fragment_play_btn_foul_one"
            app:layout_constraintEnd_toStartOf="@+id/frag_play_btn_foul_two"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frag_play_label_foul_modifier"
            app:setSelected="@{playViewModel.eventFoulModifier == -3}" />

        <TextView
            android:id="@+id/frag_play_btn_foul_two"
            style="@style/temp_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_large"
            android:onClick="@{() -> playViewModel.setFoulModifier(-2)}"
            android:text="@string/fragment_play_btn_foul_two"
            app:layout_constraintBottom_toBottomOf="@+id/frag_play_btn_foul_one"
            app:layout_constraintEnd_toStartOf="@+id/frag_play_btn_foul_three"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/frag_play_btn_foul_one"
            app:setSelected="@{playViewModel.eventFoulModifier == -2}" />

        <TextView
            android:id="@+id/frag_play_btn_foul_three"
            style="@style/temp_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_large"
            android:onClick="@{() -> playViewModel.setFoulModifier(-1)}"
            android:text="@string/fragment_play_btn_foul_three"
            app:layout_constraintBottom_toBottomOf="@+id/frag_play_btn_foul_two"
            app:layout_constraintEnd_toStartOf="@+id/frag_play_btn_foul_four"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/frag_play_btn_foul_two"
            app:setSelected="@{playViewModel.eventFoulModifier == -1}" />

        <TextView
            android:id="@+id/frag_play_btn_foul_four"
            style="@style/temp_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_large"
            android:onClick="@{() -> playViewModel.setFoulModifier(0)}"
            android:text="@string/fragment_play_btn_foul_four"
            app:layout_constraintBottom_toBottomOf="@+id/frag_play_btn_foul_three"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/frag_play_btn_foul_three"
            app:setSelected="@{playViewModel.eventFoulModifier == 0}" />

        <TextView
            android:id="@+id/frag_play_btn_play"
            style="@style/temp_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_large"
            android:text="@string/fragment_play_btn_play"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frag_play_label_foul_modifier" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>