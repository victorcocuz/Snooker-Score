<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/l_nav_settings_ll_rules_advanced"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:paddingStart="@dimen/margin_small"
    android:paddingEnd="@dimen/margin_small"
    android:paddingTop="@dimen/margin_xxsmall"
    android:paddingBottom="@dimen/margin_xxsmall"
    android:focusable="true"
    android:background="?attr/selectableItemBackground"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/l_nav_settings_toggle_tv_title"
        style="@style/TextHeaderBold"
        tools:text="@string/f_nav_settings_toggle_rules_advanced_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/l_nav_settings_toggle_tv_description"
        style="@style/TextBody"
        android:layout_width="0dp"
        android:layout_marginEnd="@dimen/margin_small"
        tools:text="@string/f_nav_settings_toggle_rules_advanced_description"
        app:layout_constraintEnd_toStartOf="@id/l_nav_settings_toggle_sc_slider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/l_nav_settings_toggle_tv_title" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/l_nav_settings_toggle_sc_slider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff=""
        android:textOn=""
        android:thumb="@drawable/toggle_slider_thumb"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:showText="true"
        app:track="@drawable/toggle_slider_track" />
</androidx.constraintlayout.widget.ConstraintLayout>