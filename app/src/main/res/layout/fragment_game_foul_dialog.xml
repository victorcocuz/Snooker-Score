<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.example.snookerscore.domain.MatchAction"/>
        <variable
            name="ballAdapter"
            type="com.example.snookerscore.fragments.game.BallAdapter" />
        <variable
            name="eventsViewModel"
            type="com.example.snookerscore.GenericEventsViewModel" />
        <variable
            name="gameViewModel"
            type="com.example.snookerscore.fragments.game.GameViewModel" />
        <import type="com.example.snookerscore.domain.PotAction"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.gamedialogs.GameFoulDialogFragment">

        <TextView
            android:id="@+id/foul_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:text="@string/foul_label_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/foul_label_balls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            android:text="@string/foul_label_choose_ball"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/foul_title" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/foul_balls_list_rv"
            android:layout_width="0dp"
            app:bindFoulBalls="@{gameViewModel.displayFrame.ballStack.size()}"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/foul_label_balls" />

        <TextView
            android:id="@+id/foul_label_choose_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:text="@string/fragment_foul_label_choose_action"
            app:layout_constraintStart_toStartOf="@+id/foul_label_balls"
            app:layout_constraintTop_toBottomOf="@+id/foul_balls_list_rv" />

        <TextView
            android:id="@+id/foul_action_continue"
            style="@style/temp_btn"
            android:layout_width="wrap_content"
            android:layout_marginStart="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_xsmall"
            android:onClick="@{() -> eventsViewModel.onActionClicked(PotAction.SWITCH)}"
            app:setSelected="@{eventsViewModel.actionClicked == PotAction.SWITCH}"
            android:text="@string/fragment_game_foul_action_continue"
            app:layout_constraintEnd_toStartOf="@+id/foul_action_force_continue"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/foul_label_choose_action" />

        <TextView
            android:id="@+id/foul_action_force_continue"
            style="@style/temp_btn"
            android:layout_width="wrap_content"
            android:onClick="@{() -> eventsViewModel.onActionClicked(PotAction.CONTINUE)}"
            android:text="@string/fragment_foul_action_force_continue"
            app:setSelected="@{eventsViewModel.actionClicked == PotAction.CONTINUE}"
            app:dialogCannotForce="@{gameViewModel.displayFrame}"
            app:layout_constraintBottom_toBottomOf="@+id/foul_action_continue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/foul_action_continue" />

        <TextView
            android:id="@+id/foul_label_other_actions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:text="@string/fragment_foul_label_other_actions"
            app:layout_constraintStart_toStartOf="@+id/foul_label_choose_action"
            app:layout_constraintTop_toBottomOf="@+id/foul_action_continue" />

        <TextView
            android:id="@+id/foul_action_free_ball"
            style="@style/temp_btn"
            android:layout_width="wrap_content"
            android:onClick="@{() -> eventsViewModel.onFreeballClicked()}"
            android:text="@string/fragment_foul_action_free_ball"
            app:dialogFreeBallEnabledAction="@{eventsViewModel.actionClicked}"
            app:setSelected="@{eventsViewModel.isFreeBall}"
            app:layout_constraintBottom_toBottomOf="@+id/foul_action_remove_red"
            app:layout_constraintEnd_toStartOf="@+id/foul_action_remove_red"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/foul_action_remove_red"
            style="@style/temp_btn"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:onClick="@{() -> eventsViewModel.onRemoveRedClicked()}"
            android:text="@string/fragment_foul_action_remove_red"
            app:dialogSetRedEnabled="@{gameViewModel.displayFrame.ballStack.size()}"
            app:setSelected="@{eventsViewModel.isRemoveRed}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/foul_action_free_ball"
            app:layout_constraintTop_toBottomOf="@+id/foul_label_other_actions" />

        <TextView
            android:id="@+id/foul_cancel"
            style="@style/temp_btn"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginBottom="@dimen/margin_large"
            android:onClick="@{() -> eventsViewModel.onEventActionQueried(MatchAction.NO_ACTION)}"
            android:text="@string/fragment_foul_cancel"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/foul_ok"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/foul_action_remove_red" />

        <TextView
            android:id="@+id/foul_ok"
            style="@style/temp_btn"
            android:layout_width="wrap_content"
            android:onClick="@{() -> eventsViewModel.onEventActionQueried(MatchAction.FOUL_QUERIED)}"
            android:text="@string/fragment_foul_ok"
            app:layout_constraintBottom_toBottomOf="@+id/foul_cancel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/foul_cancel" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>