<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.quickpoint.snookerboard.domain.DomainMatchInfo.RULES"/>

        <variable
            name="varPostGameVm"
            type="com.quickpoint.snookerboard.fragments.postgame.PostGameViewModel" />

        <import type="com.quickpoint.snookerboard.utils.MatchAction" />

        <variable
            name="varMatchVm"
            type="com.quickpoint.snookerboard.MatchViewModel" />

        <variable
            name="varMaxHeight"
            type="int" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.postgame.PostGameFragment">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/frag_post_game_guide_vert_mid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_percent="0.5"
            app:layout_constraintStart_toStartOf="parent" />

        <include
            android:id="@+id/frag_post_game_layout_top"
            layout="@layout/layout_game_top"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/frag_post_game_text_score_frames_a"
            style="@style/TextTitle"
            android:layout_marginStart="@dimen/margin_layout_offset"
            android:layout_marginEnd="@dimen/margin_layout_offset"
            android:text="@{String.valueOf(varPostGameVm.totalsA.matchPoints)}"
            app:layout_constraintEnd_toStartOf="@+id/frag_post_game_text_score_total"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frag_post_game_layout_top"
            tools:text="13" />

        <TextView
            android:id="@+id/frag_post_game_text_score_total"
            style="@style/TextSubtitle"
            app:layout_constraintBottom_toBottomOf="@+id/frag_post_game_text_score_frames_a"
            app:layout_constraintEnd_toEndOf="@+id/frag_post_game_guide_vert_mid"
            app:layout_constraintStart_toStartOf="@+id/frag_post_game_guide_vert_mid"
            app:layout_constraintTop_toTopOf="@+id/frag_post_game_text_score_frames_a"
            android:text="@{String.valueOf(RULES.INSTANCE.getDisplayFrames())}" />

        <TextView
            android:id="@+id/frag_post_game_text_score_frames_b"
            style="@style/TextTitle"
            android:layout_marginStart="@dimen/margin_layout_offset"
            android:layout_marginEnd="@dimen/margin_layout_offset"
            android:text="@{String.valueOf(varPostGameVm.totalsB.matchPoints)}"
            app:layout_constraintBottom_toBottomOf="@+id/frag_post_game_text_score_frames_a"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/frag_post_game_text_score_total"
            tools:text="15" />

        <include
            android:id="@+id/frag_post_game_header"
            layout="@layout/layout_post_game_stats_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            android:layout_marginTop="@dimen/margin_header_above"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frag_post_game_text_score_frames_a" />

        <FrameLayout
            android:id="@+id/frag_post_game_ghost_frame_for_height"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/frag_post_game_ghost_frame"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frag_post_game_header" />


        <ScrollView
            android:id="@+id/frag_post_game_scroll_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frag_post_game_header"
            app:layout_constraintVertical_bias="0.0">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/frag_post_game_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:bindGameStatsData="@{varPostGameVm.score}"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="16"
                tools:layout_editor_absoluteX="0dp"
                tools:listitem="@layout/layout_post_game_stats_view" />
        </ScrollView>

        <include
            android:id="@+id/frag_post_game_footer"
            layout="@layout/layout_post_game_stats_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_stretched_height"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frag_post_game_scroll_view" />

        <FrameLayout
            android:id="@+id/frag_post_game_ghost_frame"
            android:layout_width="0dp"
            android:layout_height="@dimen/toolbar_height"
            app:layout_constraintBottom_toTopOf="@+id/frag_post_game_line_hor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <FrameLayout
            android:id="@+id/frag_post_game_line_hor"
            style="@style/LineHorizontalAccent"
            android:layout_width="0dp"
            app:layout_constraintBottom_toTopOf="@+id/frag_post_game_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/frag_post_game_btn"
            style="@style/ButtonStretched"
            android:layout_width="match_parent"
            android:onClick="@{() -> varMatchVm.assignEventMatchAction(MatchAction.NAVIGATE_HOME)}"
            android:text="@string/fragment_game_stats_btn_go_to_play"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>